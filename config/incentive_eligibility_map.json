  "eligibility_determination_logic": {
    "step_1_check_weatherization": {
      "condition": "ami <= 60 OR fpl <= 200",
      "result": "STOP - Direct to SWR Weatherization (no-cost comprehensive)",
      "action": "Provide contact: 1-800-766-6861"
    },
    "step_2_check_cpf_eligible": {
      "condition": "ami > 60 AND ami <= 80",
      "result": "CPF Income-Qualified + HEAR (100%) + CERTA",
      "action": "Maximize stacking with federal HEAR rebates"
    },
    "step_3_check_hear_moderate": {
      "condition": "ami > 80 AND ami <= 150",
      "result": "Standard + HEAR (50%) + HOMES (if comprehensive)",
      "action": "Consider whole-home approach for HOMES qualification"
    },
    "step_4_market_rate": {
      "condition": "ami > 150",
      "result": "Standard + HOMES (if comprehensive)",
      "action": "Focus on high-ROI measures; consider financing"
    }
  },

